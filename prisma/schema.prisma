generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
}

model User {
  id          Int          @id @default(autoincrement())
  email       String       @unique
  name        String?
  password    String
  role        String       @default("user")
  course      String
  studentId   String       @unique
  phone       String?
  attendances Attendance[]
}

model ClassToday {
  id          Int      @id @default(autoincrement())
  classDate   DateTime
  day         String   
  noOfClasses Int
  createdAt   DateTime @default(now())
}



model Attendance {
  id        Int      @id @default(autoincrement())
  date      DateTime
  subject   String
  status    String
  method    String
  createdAt DateTime @default(now())
  userId Int?       
  user   User? @relation(fields: [userId], references: [id])
}

model CourseStats {
  id           Int    @id @default(autoincrement())
  course       String @unique
  totalStudents Int
  createdAt    DateTime @default(now())
}


