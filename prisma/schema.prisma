generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"   
}
datasource db {
  provider = "postgresql"
}


model Attendance {
  id        String   @id @default(uuid())
  date      String
  subject   String
  status    String
  method    String
createdAt DateTime @default(now())
  // Optional extras:
  // course      String?
  // studentId   String?
  // teacherId   String?
}